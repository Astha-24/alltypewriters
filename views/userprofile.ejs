                </button>
                <a class="navbar-brand" href="#page-top">All Type Writers</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li class="page-scroll">
                        <a href="/profile/startastory" target="_blank">Start a story</a>
                    </li>
                    <li class="page-scroll">
                        <a href="/logout">Logout</a>
                    </li>
                    <%if(username) {%>
                        <li class="page-scroll">
                            <a href="#menu-toggle" id="menu-toggle">Hi! <%=username%> </a>
                        </li>
                        <%}%>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>
    <div class="container-fluid">
        <div class="col-xs-3">
            <%if (photo) {%>
                <a href="#"> <span style="margin-left:10px;"><img class="img-profile"src="<%=photo%>" alt="facebook-image here"></span></a>
                <%}%>
        </div>
        <div class="col-xs-7">
            <h3>About me</h3>
            <p class="aboutMe">
                <%=about%>
            </p>
            <br>
            <a href="" data-toggle="modal" data-target="#modal-about"> Update</a>
        </div>
        <div class="col-xs-11">
            <h3>Stories</h3>
            <p id="user" hidden="true"><%=user_name%></p>
            <div class="mystory"></div>
        </div>
    </div>
    <!--About-me-Modal-->
    <div class="modal fade" id="modal-about" tabindex="-1" role="dialog" aria-labelledby="modal-register-label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    <h3 class="modal-title" id="modal-register-label">About Me</h3>
                </div>
                <div class="modal-body">
                    <form action="/aboutauthor/<%=id%>" method="post">
                        <div class="form-group">
                            <textarea rows="8" cols="300" class="form-control" name="about" placeholder="Hey! Speak about Yourself..." required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary" id="about">Sure!</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- jQuery -->
    <script src="/assets/js/jquery-3.2.1.js"></script>
    <!-- Bootstrap Core JavaScript -->
