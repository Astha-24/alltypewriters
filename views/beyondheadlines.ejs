                    html+=str+"...<br>";
                    author= val["author"]+"<br>";
                    var url="/profile/beyondheadlines/"+val._id;


               $(".mystory").append("<div class='col-md-4'><br><h4>"+val.title+"</h4><br><p>"+html+"</p><br><h5>"+author+"</h5><a href='" +url + "'class='btn btn-holly'>See More</a></div>"); 
